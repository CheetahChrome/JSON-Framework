<UserControl x:Class="JSON_Display.Controls.SettingsDatabase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JSON_Display.Controls"
             mc:Ignorable="d" 
             x:Name="ucSettingsDatabase"
             d:DesignHeight="60"
             d:DesignWidth="310"
             Width="450"
             Background="White">
    <GroupBox Header="Database Settings"
              Margin="2">

        <StackPanel Orientation="Vertical">

            <StackPanel Orientation="Horizontal"
                        Margin="10,6,0,6">
                <Label Content="Connection" />
                <TextBox HorizontalAlignment="Center"
                         Width="340"
                         Height="28"
                         HorizontalContentAlignment="Left"
                         VerticalContentAlignment="Center"
                         Text="{Binding ElementName=ucSettingsDatabase, Path=Database.DatabaseConnectionString}" />
            </StackPanel>
        </StackPanel>

    </GroupBox>
</UserControl>
