<UserControl x:Class="JSON_Display.Controls.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JSON_Display.Controls"
             mc:Ignorable="d" 
             x:Name="ucSettings"
             d:DesignHeight="450" d:DesignWidth="800" Background="Beige" Opacity="80">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Settings" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.ColumnSpan="3" />

        <GroupBox Header="C#" Grid.Row="1" Grid.Column="1">
            <CheckBox  Content="Add `DTO` Suffix" Margin="10"
                       IsChecked="{Binding ElementName=ucSettings, Path=CSharp.AddDTOSuffix}"
                       />

        </GroupBox>
        

    </Grid>
</UserControl>
